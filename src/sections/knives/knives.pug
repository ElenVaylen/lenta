mixin knives-item(name, img, text, sale, price, oldprice, chip)
  .knives-item
    .knives-item__wrap
      .knives-item__sale
        if sale = '83'
          include ../../images/discount-01.svg
      .knives-item__img
        img(src=`./images/${img}`, alt="")
      .knives-item__content.flex
        .knives-item__price.col-auto
          p.knives-item__actual= price
            img(src="./images/rub.png", alt="")
          p.knives-item__chip= chip
          p.knives-item__old
            span= oldprice
            img(src="./images/rub.png", alt="")
        .knives-item__preview.col
          p.knives-item__title= name
          p.knives-item__text= text

mixin knives-dotted-item(img)
  .knives-dotted__item
    .knives-dotted__item-wrap
      img(src=`./images/${img}`, alt="")


